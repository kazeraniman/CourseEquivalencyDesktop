<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CourseEquivalencyDesktop.Views.General.LoadingSpinner">

    <UserControl.Styles>
        <Style Selector="Canvas">
            <Setter Property="RotateTransform.CenterX" Value="25"/>
            <Setter Property="RotateTransform.CenterY" Value="25"/>

            <Style.Animations>
                <Animation Duration="0:0:5" IterationCount="Infinite">
                    <KeyFrame Cue="0%">
                        <Setter Property="RotateTransform.Angle" Value="0"/>
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="RotateTransform.Angle" Value="360"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
    </UserControl.Styles>

    <Canvas Height="50"
            Width="50">
        <Path
            Canvas.Left="0"
            Canvas.Right="0"
            Canvas.Top="0"
            Canvas.Bottom="0"
            Height="50"
            Width="50"
            Data="{StaticResource LoadingIconData}"/>

    </Canvas>

</UserControl>
